<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="play_button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/light_green_color</item>
        <item name="colorControlHighlight">@color/green_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/green_color</item>
    </style>
    <style name="start_button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/light_red_color</item>
        <item name="colorControlHighlight">@color/red_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/red_color</item>
    </style>
    <style name="score_text" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/archivo_black</item>
    </style>
    <style name="score" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">44sp</item>
        <item name="fontFamily">@font/actor</item>
    </style>
    <style name="round_button" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@drawable/button_round</item>
    </style>
    <style name="game_won_text" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">40sp</item>
        <item name="fontFamily">@font/abeezee</item>
    </style>
</resources>